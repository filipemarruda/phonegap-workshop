<?xml version='1.0' encoding='utf-8'?>
<widget id="com.filipemarruda.phonegap" version="0.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <feature name="Contacts">
        <param name="android-package" value="org.apache.cordova.contacts.ContactManager" />
    </feature>
    <name>Phonegap</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <cdv:plugin name="org.apache.cordova.console" />
    <cdv:plugin name="org.apache.cordova.device" />
    <cdv:plugin name="org.apache.cordova.geolocation" />
    <cdv:plugin name="org.apache.cordova.camera" />
    <cdv:plugin name="org.apache.cordova.contacts" />
</widget>
